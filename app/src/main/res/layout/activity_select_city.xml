<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_color"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_50dp"
                android:layout_marginRight="@dimen/dimen_50dp"
                android:layout_marginTop="@dimen/dimen_30dp"
                android:fontFamily="@font/helvetica_neue_bold"
                android:gravity="center"
                android:text="Select your City"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/dimen_24dp" />

            <LinearLayout
                android:id="@+id/layoutCurrentLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_20dp"
                android:layout_marginLeft="@dimen/dimen_50dp"
                android:layout_marginRight="@dimen/dimen_50dp"
                android:layout_marginTop="@dimen/dimen_30dp"
                android:background="@drawable/btn_shape_active"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/dimen_25dp"
                    android:layout_height="@dimen/dimen_25dp"
                    android:background="@drawable/ic_current_location" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_shape_active"
                    android:text="Use Currect Location"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_normal" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_india"
                android:drawablePadding="@dimen/dimen_10dp"
                android:fontFamily="@font/helvetica_neue"
                android:gravity="center_vertical"
                android:padding="@dimen/dimen_10dp"
                android:text="India"
                android:textSize="@dimen/dimen_16dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvIndore"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50dp"
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:background="@color/white"
            android:drawablePadding="@dimen/dimen_10dp"
            android:fontFamily="@font/helvetica_neue_bold"
            android:gravity="center_vertical"
            android:padding="@dimen/dimen_10dp"
            android:text="Indore"
            android:textSize="@dimen/dimen_20dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:layout_marginRight="@dimen/dimen_20dp"
            android:background="@color/bg_color" />
    </LinearLayout>

</RelativeLayout>